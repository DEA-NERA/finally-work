<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity">
    <Toolbar
        android:id="@+id/filterToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:navigationIcon="@drawable/ic_arrow_left_light"
        app:layout_constraintTop_toTopOf="parent">
    </Toolbar>

    <TextView
        android:id="@+id/SpecializationstextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Напрям спеціалізації"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterToolbar" />
    <CheckBox
        android:id="@+id/checkBoxDepress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:buttonTint="@color/main_green"
        android:text="Депрасивні стани"
        app:layout_constraintTop_toBottomOf="@+id/SpecializationstextView" />

    <CheckBox
        android:id="@+id/checkBoxPanic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/main_green"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Панічні атаки"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDepress"
         />

    <CheckBox
        android:id="@+id/checkBoxLoveself"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/main_green"
        android:text="Самооцінка"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/checkBoxPanic"/>

    <CheckBox
        android:id="@+id/checkBoxEmotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/main_green"
        android:text="Емоційне вигорання"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/checkBoxLoveself"
        />

    <CheckBox
        android:id="@+id/checkBoxSuicide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/main_green"
        android:text="Спроби самогубства"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/checkBoxEmotion"/>

    <Button
        android:id="@+id/buttonFilterOk"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="OK"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/checkBoxSuicide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_green"
         />


</androidx.constraintlayout.widget.ConstraintLayout>